{% extends "base.html.twig" %}

{% block body %}
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4" data-controller="produits">
    <div class="bg-indigo-100/50 rounded-xl border border-indigo-300 md:col-span-2">
        <div class="p-3 mb-4 mx-auto bg-indigo-200/50 border-b border-indigo-300 rounded-t-xl text-gray-800">
            <h1 class="text-2xl font-bold">{{ produit.nom }}</h1>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-4 text-gray-700 px-3 md:px-0 md:min-h-70">
            <div class="md:col-span-3">
                {% if produit.images %}
                    <img src="{{asset('uploadedFiles/' ~ produit.categorie.nom ~ '/' ~ produit.image)}}" alt="">
                {% endif %}
            </div>
            <div id="main-info" class="w-full md:col-span-2">
                <ul>
                    <li><span class="font-semibold">Édité par : </span>{{ produit.editeur }}</li> 
                    <li><span class="font-semibold">Note : </span>{{ produit.note }} / 5</li>
                    <li class="mt-2">{{ produit.description }}</li>
                </ul>
            </div>
        </div>

        <div class="min-h-11 mt-4 bg-indigo-200/50 rounded-b-xl border-t border-indigo-300"></div>
    </div>
    <div class="w-full rounded-xl p-2 bg-gradient-to-br flex md:flex-row justify-center from-indigo-300/50 to-sky-300/50 items-center from-60% border border-indigo-300">
        <div class="mx-auto my-auto h-fit w-fit">
            <div class="">
                <p class="font-black text-4xl text-center text-gray-900 my-2 mb-4"><span class="font-normal text-2xl">Prix : </span><br>{{ produit.prix }} €</p>
                {% if produit.isBulkSale %}
                    <p class="italic text-md text-gray-700 text-center mb-4 -mt-3">Se vend par lot de {{ produit.bulkSize }} &lpar;<span class=""></span>{{ produit.prix * produit.bulkSize }} €/lot&rpar;</p>
                {% endif %}
            </div>
            <div class="mt-8 mb-4 md:mb-0">
                <div data-action="click->produits#add-to-cart" data-url="{{ path('app_panier_add_product', {id: produit.id}) }}" class=" rounded-3xl text-center bg-gradient-to-br from-sky-400 to-indigo-400 text-white border hover:border-indigo-100 hover:shadow-md hover:shadow-indigo-500/50 py-4 px-6 text-xl hover:cursor-pointer transition-all active:-translate-y-1 w-fit h-fit mx-auto">
                    <i class="fa-solid fa-cart-shopping"></i> Ajouter au panier
                </div>
                <p id="confirmation"></p>
            </div>
        </div>
    </div>
</div>


<div class="rounded-xl border border-indigo-300 bg-indigo-100/50">
    <div class="rounded-t-xl border-b border-indigo-300 bg-indigo-200/50 md:flex justify-around text-xl font-bold text-center text-gray-800">
        <div data-content="description" class=" rounded-t-xl md:rounded-tr-none relative transition-all duration-200 w-full border-b md:border-b-0 md:border-r border-indigo-300 py-3 hover:cursor-pointer produit-content-selected" data-action="click->produits#changeSelectedContent">Déscription détaillée</div>
        <div data-content="fiche-technique" class=" border-b md:border-b-0 border-indigo-300 relative transition-all duration-200 w-full py-3 hover:cursor-pointer" data-action="click->produits#changeSelectedContent">Fiche technique</div>
        <div data-content="avis" class="relative transition-all duration-200 w-full border-b md:border-b-0 md:border-l border-indigo-300 py-3 hover:cursor-pointer" data-action="click->produits#changeSelectedContent">Avis</div>
    </div>
    <div id="produit-content" class="min-h-100">
        <div id="description" class="p-2 text-gray-700">
            {{ produit.longDescription }}
        </div>
        <div id="fiche-technique" class="p-2 text-gray-700 hidden">

        </div>
        <div id="avis" class="p-2 text-gray-700 hidden">
        
        </div>
    </div>
</div>


{% endblock %}