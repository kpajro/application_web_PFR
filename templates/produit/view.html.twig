{% extends "base.html.twig" %}

{% block body %}
<div class="bg-indigo-200/50 rounded-xl mb-4 border border-indigo-300">
    <div class="p-3 mb-4 mx-auto bg-indigo-200/80 border-b border-indigo-300 rounded-t-xl text-gray-800">
        <h1 class="text-2xl font-bold">{{ produit.nom }}</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 text-gray-700 min-h-70">
        <div class="md:col-span-3">
            {% if produit.images %}
                <img src="{{asset('uploadedFiles/' ~ produit.categorie.nom ~ '/' ~ produit.image)}}" alt="">
            {% endif %}
        </div>
        <div id="main-info" class="w-full md:col-span-2">
            <ul>
                <li><span class="font-semibold">Édité par : </span>{{ produit.editeur }}</li> 
                <li><span class="font-semibold">Note : </span>{{ produit.note }} / 5</li>
                <li class="mt-2">{{ produit.description }}</li>
            </ul>
        </div>
    </div>

    <div class="min-h-11 mt-4 bg-indigo-200/80 rounded-b-xl border-t border-indigo-300"></div>
</div>

<div class="md:flex md:justify-around w-full rounded-xl p-2 bg-gradient-to-br from-indigo-200/70 to-sky-200/70 items-center from-60% border border-indigo-300 mb-4">
    <div class="">
        <p class="font-bold text-2xl text-center text-gray-900 my-2 mb-4"><span class="font-normal text-lg">Prix : </span>{{ produit.prix }} €</p>
        {% if produit.isBulkSale %}
            <p class="italic text-sm text-gray-700 text-center mb-4 -mt-3">Se vend par lot de {{ produit.bulkSize }} &lpar;{{ produit.prix * produit.bulkSize }} €/lot&rpar;</p>
        {% endif %}
    </div>
    <div>
        <div class=" rounded-xl text-center bg-gradient-to-br from-sky-400 to-indigo-400 text-white border hover:border-indigo-100 hover:shadow-md hover:shadow-indigo-500/50 p-4 text-lg hover:cursor-pointer transition-all active:-translate-y-1 w-fit h-fit">
            <a href="{{ path('app_panier_add_product', {produit: produit.id}) }}" class="w-full h-full">Ajouter au panier</a>
        </div>
        <p id="confirmation"></p>
    </div>
</div>

<div class="rounded-xl border border-indigo-300 bg-indigo-100/50">
    <div class="rounded-t-xl border-b border-indigo-300 bg-indigo-100/80 flex justify-around text-xl font-bold text-center text-gray-800">
        <div class="relative transition-all duration-200 w-full border-r border-indigo-300 py-3 hover:cursor-pointer produit-content-selected">Déscription détaillée</div>
        <div class="relative transition-all duration-200 w-full py-3 hover:cursor-pointer">Fiche technique</div>
        <div class="relative transition-all duration-200 w-full border-l border-indigo-300 py-3 hover:cursor-pointer">Avis</div>
    </div>
    <div id="produit-content" class="min-h-100">
        <div id="description" class="p-2 text-gray-700">
            {{ produit.longDescription }}
        </div>
        <div id="fiche-technique" class="p-2 text-gray-700 hidden">

        </div>
        <div id="avis" class="p-2 text-gray-700 hidden">
        
        </div>
    </div>
</div>


{% endblock %}