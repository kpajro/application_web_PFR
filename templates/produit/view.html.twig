{% extends "base.html.twig" %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block body %}
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4" data-controller="produits">
    <div class="bg-gradient-to-b from-transparent from-10% to-indigo-300/20 rounded-xl md:col-span-2">
        <div class="p-3 mb-5 mx-auto bg-gradient-to-br from-indigo-400/30 from-50% to-sky-400/30 rounded-xl text-gray-800">
            <h1 class="text-2xl font-bold">{{ produit.nom }}</h1>
            <p class="text-xs text-gray-600 italic">
                <a href="{{ path('app_categories_list') }}" class="hover:underline transition-all">Catégories</a> > <a href="{{ path('app_categorie', {id: produit.categorie.id}) }}" class="hover:underline transtion-all">{{ produit.categorie.nom }}</a> > {{ produit.nom }}
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-4 text-gray-700 px-3 md:px-0 md:min-h-70">
            <div class="md:col-span-3">
                {% if produit.images %}
                    <img src="{{asset('uploadedFiles/' ~ produit.categorie.nom ~ '/' ~ produit.image)}}" alt="">
                {% endif %}
            </div>
            <div id="main-info" class="w-full md:col-span-2 pb-4">
                <ul>
                    <li><span class="font-semibold">Édité par : </span>{{ produit.editeur }}</li> 
                    <li><span class="font-semibold">Note : </span>{{ produit.note|round(1) }} / 5</li>
                    <li class="mt-2">{{ produit.description }}</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="w-full rounded-xl p-2 bg-gradient-to-br flex md:flex-row justify-center from-indigo-400/30 to-sky-400/30 items-center from-60%">
        <div class="mx-auto my-auto h-fit w-fit">
            <div class="">
                <p class="font-black text-4xl text-center text-gray-900 my-2 mb-4"><span class="font-normal text-2xl">Prix : </span><br>{{ produit.prix }} €</p>
                {% if produit.isBulkSale %}
                    <p class="italic text-md text-gray-700 text-center mb-4 -mt-3">Se vend par lot de {{ produit.bulkSize }} &lpar;<span class=""></span>{{ produit.prix * produit.bulkSize }} €/lot&rpar;</p>
                {% endif %}
            </div>
            <div class="mt-8 mb-4 md:mb-0">
                <div data-action="click->produits#addToCart" data-url="{{ path('app_panier_add_product', {id: produit.id}) }}" class=" rounded-2xl text-center bg-gradient-to-br from-indigo-400 to-sky-400 text-white hover:shadow-lg hover:shadow-sky-500/30 py-4 px-6 text-xl hover:cursor-pointer transition-all active:-translate-y-1 w-fit h-fit mx-auto">
                    <i class="fa-solid fa-cart-shopping"></i> Ajouter au panier
                </div>
                <p class="italic mt-2 mx-auto rounded-xl bg-green-300/60 hidden text-green-700 text-center p-2" id="confirmation"></p>
            </div>
        </div>
    </div>
</div>


<div class="rounded-xl bg-gradient-to-b from-transparent from-10% to-indigo-300/20">
    <div class="md:flex justify-around text-xl font-bold text-center text-gray-800 gap-2 mb-4 sticky top-2 backdrop-blur-md z-">
        <div data-content="description" class="mb-2 md:mb-0 min-h-[60px] bg-indigo-300/30 onglet rounded-xl transition-all duration-200 w-full border-indigo-300 py-3 hover:cursor-pointer onglet-selected hover:shadow-md shadow-sky-400/20" >Déscription détaillée</div>
        <div data-content="fiche-technique" class="mb-2 md:mb-0 min-h-[60px] onglet bg-indigo-300/30 rounded-xl transition-all duration-200 w-full border-indigo-300 py-3 hover:cursor-pointer hover:shadow-md shadow-sky-400/20">Fiche technique</div>
        <div data-content="avis" class="min-h-[60px] onglet rounded-xl bg-indigo-300/30  transition-all duration-200 border-indigo-300 w-full py-3 hover:cursor-pointer hover:shadow-md shadow-sky-400/20">Avis des utilisateurs</div>
    </div>

    <div id="produit-content" class="min-h-100 p-2">
        <div id="description" class="p-2 text-gray-700">
            {{ produit.longDescription|raw }}
        </div>

        <div id="fiche-technique" class="p-2 text-gray-700 hidden">
            <table class="produit-table">
                <tr class="alt-row">
                    <th>Catégorie</th>
                    <td>{{ produit.categorie.nom }}</td>
                </tr>
                <tr>
                    <th>Disponible sur</th>
                    <td>
                        {% set win = '<i class="fa-brands fa-windows text-xl mr-2"></i>' %}
                        {% set lin = '<i class="fa-brands fa-linux text-xl mr-2"></i>' %}
                        {% set mac = '<i class="fa-brands fa-apple text-xl mr-2"></i>' %}
                        {% for os in produit.os %}
                            {% if os == 'WIN' %}
                                {{ win|raw }}
                            {% elseif os == 'LIN' %}
                                {{ lin|raw }}
                            {% elseif os == 'MacOS' %}
                                {{ mac|raw }}
                            {% endif %}
                        {% else %}
                            Non renseigné 
                        {% endfor %}
                    </td>
                </tr>
                <tr class="alt-row">
                    <th>Disponible en</th>
                    <td>
                        {% for langage in produit.langages %}
                           {{ langage }}<br>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Édité par</th>
                    <td>{{ produit.editeur }}</td>
                </tr>
                <tr class="alt-row">
                    <th>Sorti le</th>
                    <td></td>
                </tr>
                <tr >
                    <th>Version la plus récente</th>
                    <td></td>
                </tr>
                <tr class="alt-row">
                    <th>Taille sur le disque requise</th>
                    <td></td>
                </tr>
                <tr>
                    <th>Type de configuration requise</th>
                    <td></td>
                </tr>
            </table>
        </div>

        <div id="avis" class="p-2 text-gray-700 hidden relative">

            <div data-action="click->modal#open" data-modal-url="{{ path('app_produit_donner_avis', {id: produit.id}) }}" class="bg-gradient-to-bl from-sky-400 to-emerald-400 text-white/95 rounded-2xl hover:shadow-lg hover:shadow-emerald-500/30 hover:cursor-pointer transition-all text-lg font-semibold px-8 py-3 active:-translate-y-1 text-center mb-4 lg:w-fit mx-auto">Vous avez acheté le produit et souhaitez conseiller d'autres utilisateurs ? Donnez votre avis!</div>

            <ul class="">
                {% for avis in produit.avis %}
                   <li class="mb-8 rounded-xl">
                        <div class="flex gap-6 justify-between text-lg text-900 items-center mb-4">
                            <p class="font-black text-xl text-emerald-700 border border-sky-300 bg-gradient-to-br from-emerald-300/30 to-sky-300/30 from-60% px-3 py-2 rounded-xl">{{ avis.note }} / 5</p>
                            <div class="text-end">
                                <p class="font-semibold text-sm">{{ avis.user.email }}</p>
                                <p class="text-sm italic text-gray-600 pl-2">
                                    Le {{ avis.date|date('d/m/Y') }} à {{ avis.date|date('H:i') }}
                                </p>
                            </div>
                        </div>
                        <div class="text-gray-700 px-6 overflow-clip">
                            {{ avis.commentaire }}
                        </div>     
                        <hr class="mt-2 mx-auto w-11/12 text-sky-300">
                   </li> 
                {% endfor %}
            </ul>
        </div>
    </div>
</div>


{% endblock %}