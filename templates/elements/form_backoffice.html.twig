<div class="flex mb-2 justify-between">
    <h1>{{ title }}</h1>
    <p class="close-modal">Fermer</p>
</div>

{{ form_start(form) }}

<div>
    {{ form_widget(form) }}
</div>

<div class="mt-2">
    {% if deletable is defined and deletable == true %}
        <div class="flex justify-between" data-controller="confdelete">
            <button id="delete-btn">{{ deleteAction is defined ? deleteAction : "Supprimer l'élément"}}</button>
            <div>
                <button class="close-modal">Annuler</button>
                <button type="submit">{{ btnAction }}</button>
            </div>
        </div>
        <div id="delete-conf" class="hidden pt-1 transition-all scale-y-0">
            <p class="italic text-center">{{ deleteWarning is defined ? deleteWarning : "Êtes-vous sûr(e) de vouloir supprimer l'élément ?"}}</p>
            <div class="flex justify-center">
                <a href="{{ deleteLink }}">Supprimer</a>
                <button id="cancel-delete">Annuler la suppression</button>
            </div>
        </div>
    {% else %}
        <div class="flex justify-end">
            <button class="close-modal">Annuler</button>
            <button type="submit">{{ btnAction }}</button>
        </div>
    {% endif %}
</div>

{{ form_end(form) }}
