{% extends "base.html.twig" %}

{% block body %}

<div>
    <div class="flex mb-2 justify-between">
        <h1>{{ title }}</h1>
        <p class="close-modal">Fermer</p>
    </div>

    {{ form_start(form) }}
    <div>
        {{ form_widget(form) }}
    </div>
    
    <div>
        <button type="submit">{{ btnAction }}</button>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}