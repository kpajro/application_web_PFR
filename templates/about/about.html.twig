{% extends "base.html.twig" %}

{% block title %}About{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <form method="post" class="max-w-md mx-auto p-4 bg-white">
            <div class="mb-4">
                <label for="description" class="block text-gray-700 text-sm font-bold mb-2">Description :</label>
                <textarea name="description" class="w-full px-3 py-2 border rounded-md" rows="4">{{ about.description }}</textarea>
            </div>
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md"> Enregistrer </button>
        </form>
    {% else %}
        <p class="text-center text-gray-700 text-lg mx-auto max-w-3xl">{{ about.description }}</p>
    {% endif %}
{% endblock %}