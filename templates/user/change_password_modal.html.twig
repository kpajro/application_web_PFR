{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}


        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.currentPassword) }}
            {{ form_widget(form.currentPassword) }}
            {% for error in form.currentPassword.vars.errors %}
                <div class="text-red-500">{{ error.message }}</div>
            {% endfor %}
        </div>

        <div class="mb-4">
            {{ form_label(form.newPassword) }}
            {{ form_widget(form.newPassword) }}
            {% for error in form.newPassword.vars.errors %}
                <div class="text-red-500">{{ error.message }}</div>
            {% endfor %}
        </div>

        <div class="mb-4">
            {{ form_label(form.confirmNewPassword) }}
            {{ form_widget(form.confirmNewPassword) }}
            {% for error in form.confirmNewPassword.vars.errors %}
                <div class="text-red-500">{{ error.message }}</div>
            {% endfor %}
        </div>

        <div class="flex justify-between">
            <button type="submit" class="p-2 bg-blue-500 text-white rounded hover:bg-blue-700">Valider</button>
            <button type="button" class="p-2 bg-red-500 text-white rounded hover:bg-red-700 close-modal">Annuler</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
