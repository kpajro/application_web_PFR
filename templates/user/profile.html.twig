{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
<div class="flex justify-center items-center h-screen">
    <div class="w-1/2 p-6 border border-gray-400 rounded-lg bg-gray-200">
        <h1 class="text-2xl font-bold mb-6 text-center">User Profile</h1>

        <div class="mb-6 bg-white p-4 rounded-lg shadow">
            <p><strong>Nom :</strong> {{ app.user.name }}</p>
            <p><strong>Prénom :</strong> {{ app.user.firstname }}</p>
            <p><strong>Téléphone :</strong> {{ app.user.phoneNumber }}</p>
            <p><strong>Email :</strong> {{ app.user.email }}</p>
            <p><strong>Pays :</strong> {{ app.user.country }}</p>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-6">
            <div id="editProfileButton" data-action="click->modal#open" data-url="{{ path('app_profile_settings', {id: user.id}) }}" class="p-6 bg-blue-500 text-white text-center rounded-lg hover:bg-blue-700">Modifier mon profil</div>
            <a href="{{ path('app_logout')}}" class="p-6 bg-blue-500 text-white text-center rounded-lg hover:bg-blue-700">Se déconnecter</a>
            <div class="p-6 bg-red-500 text-white text-center rounded-lg hover:bg-red-700 col-span-2">Supprimer mon profil</div>
        </div>

        <a href="{{ path('app_forgot_password_request') }}" class="text-blue-500 hover:underline">Réinitialiser mon mot de passe</a>

    </div>
</div>

{% endblock %}

