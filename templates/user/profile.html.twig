{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
<div class="flex justify-center items-center h-screen">
    <div class="w-1/2 p-6 border border-gray-400 rounded-lg bg-gray-200">
        <h1 class="text-2xl font-bold mb-6 text-center">User Profile</h1>

        <div class="mb-6 bg-white p-4 rounded-lg shadow">
            <p><strong>Nom :</strong> {{ app.user.name }}</p>
            <p><strong>Prénom :</strong> {{ app.user.firstname }}</p>
            <p><strong>Téléphone :</strong> {{ app.user.phoneNumber }}</p>
            <p><strong>Email :</strong> {{ app.user.email }}</p>
            <p><strong>Pays :</strong> {{ app.user.country }}</p>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-6">
            <a href="#" id="editProfileButton" class="p-6 bg-blue-500 text-white text-center rounded-lg hover:bg-blue-700">Modifier mon profil</a>

            <form action="{{ path('app_logout') }}" method="post" class="w-full">
                <button type="submit" class="p-6 bg-blue-500 text-white text-center rounded-lg hover:bg-red-700 w-full">
                    Logout
                </button>
            </form>
        </div>

    </div>
</div>

<div id="editProfileModal" class="fixed inset-0 bg-gray-500 bg-opacity-50 hidden justify-center items-center">
    <div class="bg-white p-8 rounded-lg w-1/3">
        <h2 class="text-xl font-bold mb-4">Modifier mon profil</h2>
        
        {{ form_start(form, {'action': path('app_user_profile_update', {'id': user.id}), 'method': 'POST'}) }}
            <div class="mb-4">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {% for error in form.name.vars.errors %}
                    <div class="text-red-500">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="mb-4">
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname) }}
                {% for error in form.firstname.vars.errors %}
                    <div class="text-red-500">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="mb-4">
                {{ form_label(form.phoneNumber) }}
                {{ form_widget(form.phoneNumber) }}
                {% for error in form.phoneNumber.vars.errors %}
                    <div class="text-red-500">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="mb-4">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                {% for error in form.email.vars.errors %}
                    <div class="text-red-500">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="mb-4">
                {{ form_label(form.country) }}
                {{ form_widget(form.country) }}
                {% for error in form.country.vars.errors %}
                    <div class="text-red-500">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="mb-4">
                {{ form_label(form.birthday) }}
                {{ form_widget(form.birthday) }}
                {% for error in form.birthday.vars.errors %}
                    <div class="text-red-500">{{ error.message }}</div>
                {% endfor %}
            </div>
            <button type="submit" class="p-2 bg-blue-500 text-white rounded hover:bg-blue-700">Enregistrer les modifications</button>
        {{ form_end(form) }}

        <button id="closeModal" class="p-2 bg-red-500 text-white rounded mt-4 hover:bg-red-700">Fermer</button>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('editProfileButton').addEventListener('click', function () {
            document.getElementById('editProfileModal').classList.remove('hidden');
        });

        document.getElementById('closeModal').addEventListener('click', function () {
            document.getElementById('editProfileModal').classList.add('hidden');
        });

        document.getElementById('editProfileModal').addEventListener('click', function (event) {
            if (event.target === document.getElementById('editProfileModal')) {
                document.getElementById('editProfileModal').classList.add('hidden');
            }
        });
    });
</script>
{% endblock %}
