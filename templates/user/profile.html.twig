{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
<div class="flex justify-center items-center h-screen">
    <div class="w-1/2 p-6 border border-gray-400 rounded-lg bg-gray-200">
        <h1 class="text-2xl font-bold mb-6 text-center">User Profile</h1>

        {# Infos utilisateur #}
        <div class="mb-6 bg-white p-4 rounded-lg shadow">
            <p><strong>Nom :</strong> {{ app.user.name }}</p>
            <p><strong>Prénom :</strong> {{ app.user.firstname }}</p>
            <p><strong>Type de compte :</strong> {{ app.user.roles[0] }}</p>
            <p><strong>Téléphone :</strong> {{ app.user.phoneNumber }}</p>
            <p><strong>Email :</strong> {{ app.user.email }}</p>
            <p><strong>Pays :</strong> {{ app.user.country }}</p>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-6">
            <a href="{{ path('account') }}" class="p-6 bg-blue-500 text-white text-center rounded-lg hover:bg-blue-700">Mon compte</a>
            <a href="{{ path('settings') }}" class="p-6 bg-blue-500 text-white text-center rounded-lg hover:bg-green-700">Settings</a>
            <a href="{{ path('commandes') }}" class="p-6 bg-blue-500 text-white text-center rounded-lg hover:bg-yellow-700">Mes commandes</a>
            <a href="{{ path('app_logout') }}" class="p-6 bg-blue-500 text-white text-center rounded-lg hover:bg-red-700">Logout</a>
        </div>
    </div>
</div>
{% endblock %}
