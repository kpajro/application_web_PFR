<div class="flex mb-2 justify-between bg-gradient-to-br from-emerald-900/30 to-indigo-500/30 text-gray-800 px-3 py-1 rounded-xl items-center">
    <div>
        <h1 class="font-medium text-lg">Modification de mes informations utilisateur</h1>
    </div>
    <p class="close-modal text-white/70 py-1 px-4 bg-black/20 hover:bg-black/45 hover:text-white text-lg rounded-lg transition-all hover:cursor-pointer hover:shadow-sm">&times;</p>
</div>

{{ form_start(form) }}
<div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-1">
    <div class="">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {% for error in form.name.vars.errors %}
            <div class="text-red-500">{{ error.message }}</div>
        {% endfor %}
    </div>

    <div class="">
        {{ form_label(form.firstname) }}
        {{ form_widget(form.firstname) }}
        {% for error in form.firstname.vars.errors %}
            <div class="text-red-500">{{ error.message }}</div>
        {% endfor %}
    </div>

    <div class="">
        {{ form_label(form.phoneNumber) }}
        {{ form_widget(form.phoneNumber) }}
    </div>

    <div class="">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
    </div>

    <div class="">
        {{ form_label(form.country) }}
        {{ form_widget(form.country) }}
    </div>

    <div class="">
        {{ form_label(form.birthday) }}
        {{ form_widget(form.birthday) }}
    </div>

    <div class="">
        {{ form_label(form.billingAddress) }}
        {{ form_widget(form.billingAddress) }}
        {% for error in form.billingAddress.vars.errors %}
            <div class="text-red-500">{{ error.message }}</div>
        {% endfor %}
    </div>

</div>
<div class="flex justify-end h-[60px] mt-4 gap-4">
    <button type="button" class="button from-gray-400 to-gray-400 close-modal">Annuler</button>
    <button type="submit" class="button from-emerald-400 to-sky-400 shadow-emerald-500/50">Enregistrer</button>
</div>

{{ form_end(form, { render_rest: false }) }}

